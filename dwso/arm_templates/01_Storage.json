{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "adlStorage": {
            "type": "string",
            "metadata": {
                "description": "Name of the ADLStorage"
            }
        },
        "adlHotContainer": {
            "type": "string",
            "metadata": {
                "description": "Name of the Hot Container"
            }
        },
        "adlCoolContainer": {
            "type": "string",
            "metadata": {
                "description": "Name of the Cool Container"
            }
        }
    },
    "functions": [],
    "variables": {},
    "resources": [
        // check account - datalake 2 tiers - containers
        // Datalake account
        {
            "name": "[parameters('adlStorage')]",
            "type": "Microsoft.DataLakeStore/accounts",
            "apiVersion": "2016-11-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "newTier": "Consumption",
                "encryptionState": "Enabled"
            }
        },
        // Datalake hot container
        {
            "name": "[parameters('adlHotContainer')]",
            "type": "Microsoft.Storage/storageAccounts/blobServices/containers",
            "apiVersion": "2021-04-01",
            "dependsOn": [
                "[resourceId('Microsoft.DataLakeStore/accounts', parameters('adlStorage'))]"
            ],
            "properties": {
                "publicAccess": "None"
            }
        },
        // Databkicks
        {
            "name": "etlDatabricks",
            "type": "Microsoft.Databricks/workspaces",
            "apiVersion": "2018-04-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "managedResourceGroupId": ""
            }
        }

    ],

    "outputs": {
        "adlStorage": {
            "type": "Object",
            "value": "[reference(resourceId('Microsoft.DataLakeStore/accounts', parameters('adlStorage')))]"
        },

        "adlHotContainer": {
            "type": "Object",
            "value": "value"
        }
    }
}